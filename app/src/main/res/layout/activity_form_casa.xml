             android:layout_marginTop="12dp"
             android:ems="10"
             android:hint="Ciudad:"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintHorizontal_bias="0.314"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/txt_precio" />

         <EditText
             android:id="@+id/txt_Region"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginEnd="232dp"
             android:layout_marginStart="153dp"
             android:layout_marginTop="16dp"
             android:ems="10"
             android:hint="Region o zona:"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintHorizontal_bias="0.314"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/txt_ciudad" />

         <EditText
             android:id="@+id/txt_ubicacion"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginEnd="232dp"
             android:layout_marginStart="153dp"
             android:layout_marginTop="12dp"
             android:ems="10"
             android:hint="Ubucacion:"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintHorizontal_bias="0.314"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/txt_Region" />

         <EditText
             android:id="@+id/txt_direccion"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginEnd="232dp"
             android:layout_marginStart="153dp"
             android:layout_marginTop="16dp"
             android:ems="10"
             android:hint="Direccion:"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintHorizontal_bias="0.314"
